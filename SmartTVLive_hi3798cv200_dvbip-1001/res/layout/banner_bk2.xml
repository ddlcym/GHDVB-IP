<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_dtv_banner"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/banner_z4"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="880dip"
        android:layout_height="170dip"
        android:layout_marginLeft="100dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip" >

            <TextView
                android:id="@+id/banner_service_id"
                style="@style/ghTextViewStyleA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip" />

            <com.changhong.app.dtv.TextMarquee
                android:id="@+id/banner_channel_name_id"
                style="@style/ghTextViewStyleA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dip"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/banner_channel_vid_hd"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="430dip"
                android:background="@drawable/icon_hd"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/banner_channel_vid_3d"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="480dip"
                android:background="@drawable/icon_3d"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/banner_channel_multAudio"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="530dip"
                android:background="@drawable/icon_aud"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/banner_channel_subtitle"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="580dip"
                android:background="@drawable/icon_subtitle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/banner_channel_Dolby"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="630dip"
                android:background="@drawable/icon_db"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/banner_channel_mail"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="680dip"
                android:background="@drawable/icon_mail"
                android:visibility="visible" />

            <TextView
                android:id="@+id/banner_DTW_id"
                style="@style/ghTextViewStyleB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="770dip"
                android:gravity="center" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/banner_progress_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:max="100"
            android:progressDrawable="@drawable/banner_processbar_z"
            android:thumb="@drawable/seekbar_z2"
            android:thumbOffset="0dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/banner_p"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginTop="5dip"
                android:visibility="gone" >

                <TextView
                    style="@style/ghTextViewStyleC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    android:text="@string/banner_prompt_z1" />

                <TextView
                    android:id="@+id/banner_PF_P_time"
                    style="@style/ghTextViewStyleC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dip"
                    android:layout_marginTop="0dip" />

                <TextView
                    android:id="@+id/banner_PF_P_id"
                    style="@style/ghTextViewStyleC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400dip"
                    android:layout_marginTop="0dip"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="730dip"
                    android:background="@drawable/icon_play"
                    android:visibility="visible" />

                <TextView
                    style="@style/ghTextViewStyleD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="760dip"
                    android:text="@string/banner_prompt_z3" />
            </RelativeLayout>
            
            <!-- volume_bar -->
            <RelativeLayout
                android:id="@+id/volume_bar"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginTop="5dip"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/v_mult_id"
                    android:layout_width="70dip"
                    android:layout_height="56dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dip"
                    android:background="@drawable/v_mult"
                	android:visibility="invisible"/>
                	<ImageView
                    android:id="@+id/v_laba_id"
                    android:layout_width="70dip"
                    android:layout_height="56dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dip"
                    android:background="@drawable/v_laba"                    
                	android:visibility="invisible"/>                
                <ImageView
                    android:id="@+id/v_bg_id"
                    android:layout_width="782dip"
                    android:layout_height="60dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="85dip"
                    android:background="@drawable/v_bg"/>
                <ImageView
                    android:id="@+id/v_val_id"
                    android:layout_width="782dip"
                    android:layout_height="60dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="85dip"
                    android:background="@drawable/v_val"/>                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/banner_f"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_marginTop="-5dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/banner_prompt_z2"
                    style="@style/ghTextViewStyleD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip"
                    android:text="@string/banner_prompt_z2" />

                <TextView
                    android:id="@+id/banner_PF_F_time"
                    style="@style/ghTextViewStyleD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dip"
                    android:layout_marginTop="0dip" />

                <TextView
                    android:id="@+id/banner_PF_F_id"
                    style="@style/ghTextViewStyleD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400dip"
                    android:layout_marginTop="0dip"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="left|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="750dip"
                    android:background="@drawable/icon_exit"
                    android:visibility="visible" />

                <TextView
                    style="@style/ghTextViewStyleD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="810dip"
                    android:text="@string/banner_prompt_z4" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.xormedia.adplayer.AdPlayer
        android:id="@+id/adplayer"
        android:layout_width="wrap_content"
        android:layout_height="170dip"
        android:layout_gravity="center"
        android:layout_marginRight="10dip"
        android:visibility="visible" >
    </com.xormedia.adplayer.AdPlayer>

</LinearLayout>